<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.genie_pet_project">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/splash_image"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_image"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity android:name="com.example.genie_pet_project.Activity.SplashActivity"
            android:theme="@style/SplashTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.genie_pet_project.Activity.CartActivity"></activity>
        <activity android:name="com.example.genie_pet_project.Activity.MainActivity"></activity>
        <activity android:name="com.example.genie_pet_project.Activity.DetailActivity"/>
        <activity android:name="com.example.genie_pet_project.Activity.StoreListActivity"></activity>
        <activity android:name="com.example.genie_pet_project.Camera.Camera"></activity>
        <activity android:name="com.example.genie_pet_project.Activity.ProfileActivity"/>
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.genie_pet_project.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

</manifest>